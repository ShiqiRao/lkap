{
  "name": "lkap",
  "displayName": "Link Knowledge And Plan (LKAP)",
  "description": "A powerful VSCode extension for managing Markdown notes with daily note creation, bidirectional linking, and tag management",
  "version": "0.1.0",
  "publisher": "ShiqiRao",
  "author": {
    "name": "ShiqiRao"
  },
  "license": "MIT",
  "homepage": "https://github.com/ShiqiRao/lkap#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShiqiRao/lkap.git"
  },
  "bugs": {
    "url": "https://github.com/ShiqiRao/lkapissues"
  },
  "icon": "resources/icons/icon.png",
  "galleryBanner": {
    "color": "#2196F3",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Notebooks"
  ],
  "keywords": [
    "markdown",
    "notes",
    "wiki",
    "knowledge",
    "linking",
    "daily",
    "journal",
    "obsidian",
    "roam",
    "note-taking"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lkap.createDailyNote",
        "title": "Create Today's Note",
        "category": "LKAP"
      },
      {
        "command": "lkap.openNote",
        "title": "Open Note",
        "category": "LKAP"
      }
    ],
    "keybindings": [
      {
        "command": "lkap.createDailyNote",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Link Knowledge And Plan (LKAP)",
      "properties": {
        "lkap.notesPath": {
          "type": "string",
          "default": "./notes",
          "description": "Path to store note files (relative to workspace root)",
          "scope": "resource"
        },
        "lkap.dailyNoteFormat": {
          "type": "string",
          "default": "YYYY-MM-DD",
          "description": "Date format for daily notes (using moment.js format)",
          "scope": "resource"
        },
        "lkap.dailyNoteTemplate": {
          "type": "string",
          "default": "",
          "description": "Path to daily note template file (relative to workspace root)",
          "scope": "resource"
        },
        "lkap.autoCreateLinks": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create missing link targets",
          "scope": "resource"
        },
        "lkap.enableIndexing": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic indexing of notes",
          "scope": "resource"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "lkap.tagView",
          "name": "Tags",
          "when": "lkap.enabled"
        },
        {
          "id": "lkap.backlinksView",
          "name": "Backlinks",
          "when": "lkap.enabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "prepare-publish": "node scripts/prepare-publish.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/moment": "^2.13.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "moment": "^2.29.4",
    "glob": "^8.0.3"
  }
} 